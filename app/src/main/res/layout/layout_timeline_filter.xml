<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayAddRoute"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_layout_bg"
    android:backgroundTint="@color/primary"
    android:elevation="4dp"
    android:orientation="vertical"
    android:theme="@style/Theme.Material3.Light"
    app:layout_constraintBottom_toBottomOf="parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/fredoka_one"
            android:text="Filter"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtViewReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/reset"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Salesman Name"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInpLayoutSalesmanName"
        style="@style/Til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/round_bg"
        android:elevation="10dp"
        android:outlineSpotShadowColor="#10000000"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/black">

        <AutoCompleteTextView
            android:id="@+id/autoComTxtViewSalesmanName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Salesman Mobile No."
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInpLayoutSalesmanMobNo"
        style="@style/Til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/round_bg"
        android:elevation="10dp"
        android:outlineSpotShadowColor="#10000000"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/black">

        <AutoCompleteTextView
            android:id="@+id/autoComTxtViewSalesmanMobNo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Store Name"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInpLayoutStoreName"
        style="@style/Til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/round_bg"
        android:elevation="10dp"
        android:outlineSpotShadowColor="#10000000"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/black">

        <AutoCompleteTextView
            android:id="@+id/autoComTxtViewStoreName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:padding="15dp"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Visit Date"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/txtInpLayoutDate"
        style="@style/Til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/round_bg"
        android:elevation="10dp"
        android:outlineSpotShadowColor="#10000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInpEditTxtDate"
            style="@style/Tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add Filter"
        android:textSize="18sp"
        app:backgroundTint="@color/tertiary"
        app:cornerRadius="8dp" />
</LinearLayout>